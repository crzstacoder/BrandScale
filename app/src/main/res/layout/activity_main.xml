<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_vertical|right"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Logout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Logout"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Brandhall"/>


    <Button
        android:id="@+id/Searchbutton"
        android:layout_width="182dp"
        android:layout_height="190dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="379dp"
        android:text="상품검색"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profileimage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Event"
        android:layout_width="182dp"
        android:layout_height="89dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/Explane"
        app:layout_constraintTop_toBottomOf="@+id/Searchbutton"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/Brandhall"
        android:layout_width="224dp"
        android:layout_height="232dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="40dp"
        android:text="입점 브랜드관"
        android:textSize="29sp"
        app:layout_constraintBottom_toTopOf="@+id/Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Option"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Basket"
        android:layout_width="108dp"
        android:layout_height="111dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="장바구니"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Option"
        app:layout_constraintEnd_toStartOf="@+id/Brandhall"
        app:layout_constraintTop_toBottomOf="@+id/Event" />

    <Button
        android:id="@+id/Option"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:text="설정"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Basket" />

    <TextView
        android:id="@+id/Explane"
        android:layout_width="161dp"
        android:layout_height="283dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-black"
        android:text="BrandScale은\n각 브랜드의\n '시가총액'을\n기준으로 \n가치를\n판단합니다. "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Brandhall"
        app:layout_constraintStart_toEndOf="@+id/Searchbutton"
        app:layout_constraintTop_toBottomOf="@+id/myprofiletext"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/Profileimage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/myprofiletext"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="17dp"
        android:text="내 프로필"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>